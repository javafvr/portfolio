		//- Подвал
		.block-bg
			.container
				.row
					.col-sm-6.col-lg-6
						.block Контакты Текст
						.row
							.col-sm-12.col-lg-6
								.block email, skype
							.col-sm-12.col-lg-6
								.block Телефон, адрес
						.block Социальные сети
					.col-sm-6.col-lg-6
						.block Форма связи
		//- Копирайт
		.block-bg-copyright 
			.block © 2018 Дмитрий Долганов
		//- Подвал конец
		

	script(src='libs/jquery/jquery-1.11.2.min.js')
