			.row
				.hidden-xs.col-sm-2.col-lg-3
					.block Фото
				.col-sm-10.col-lg-9
					.block Резюме
					.row
						.col-sm-6
							.block Опыт работы
						.col-sm-6
							.block Образование
					.block Скачать резюме
		.line
		//- Портфолио
		.container
			.block Портфолио
			.block Фильтр
			.row
				.col-sm-4
					.block Работа 1
				.col-sm-4
					.block Работа 2
				.col-sm-4
					.block Работа 3
			.row
				.col-sm-4
					.block Работа 4
				.col-sm-4
					.block Работа 5
				.col-sm-4
					.block Работа 6
