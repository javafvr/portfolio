	script(src='libs/jquery/jquery-1.11.2.min.js')
	script(src='libs/bootstrap/js/bootstrap.min.js')
	script(src="libs/pagescroll2id/jquery.malihu.PageScroll2id.js")
	//- My scripts
	script(src='js/navigation.js')
	script(src='js/main.js')
